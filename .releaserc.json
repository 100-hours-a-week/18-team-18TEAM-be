{
  "branches": ["develop"],
  "plugins": [
    ["@semantic-release/commit-analyzer", { "preset": "conventionalcommits" }],
    ["@semantic-release/release-notes-generator", { "preset": "conventionalcommits" }],
    ["@semantic-release/changelog", { "changelogFile": "CHANGELOG.md" }],

    ["@semantic-release/exec", {
      "prepareCmd": "bash -lc \"if grep -qE '^version=' gradle.properties; then sed -i 's/^version=.*/version=${nextRelease.version}/' gradle.properties; else echo 'version=${nextRelease.version}' >> gradle.properties; fi\""
    }],

    ["@semantic-release/git", {
      "assets": ["gradle.properties", "CHANGELOG.md"],
      "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
    }],
    "@semantic-release/github"
  ]
}
